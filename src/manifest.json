{
  "manifest_version": 3,
  "name": "Viserion",
  "description": "Gets your Github and Jira data using OAuth",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Open Viserion"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": ["tabs", "storage", "webNavigation", "activeTab"]
}
